<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wsg_50">

    <xacro:macro name="wsg_50_xacro" params="name parent *origin">

    <joint name="${name}_anterior_gripper_joint" type="fixed">
        <xacro:insert_block name="origin"/>
        <parent link="${parent}"/>
        <child link="${name}_base_link"/>
    </joint>

    <!-- BASE LINK -->
    <link name="${name}_base_link">
        <inertial>
            <mass value="0.25" />
            <origin xyz="0 0 0" />
            <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
        </inertial>

        <visual>
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://iai_donbot_sandbox_description/meshes/iai_wsg_50/WSG50_110.stl" scale="1 1 1"/>
            </geometry>
            <material name="grey">
            <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://iai_donbot_sandbox_description/meshes/iai_wsg_50/WSG50_110.stl" scale="1 1 1"/>
            </geometry>
        </collision>
    </link>

    <!-- GRIPPER LEFT -->

    <joint name="${name}_base_gripper_left_joint" type="prismatic">
        <limit lower="0" upper="0.051" effort="10.0" velocity="0.42"/>
        <origin xyz="-0.0040 0 0" rpy="0 0 0" /> 
        <parent link="${name}_base_link"/>
        <child link="${name}_gripper_left_link" />
        <dynamics friction="1" damping="1" />
        <axis xyz="-1 0 0"/>
    </joint>

    <link name="${name}_gripper_left_link">
        <inertial>
            <mass value="0.001" />
            <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0" 
                izz="1.0" />
        </inertial>

        <visual>
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://iai_donbot_sandbox_description/meshes/iai_wsg_50/GUIDE_WSG50_110.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="black">
            <color rgba="0 0 0 1"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://iai_donbot_sandbox_description/meshes/iai_wsg_50/GUIDE_WSG50_110.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <!-- LEFT FINGER -->

    <joint name="${name}_guide_joint_finger_left" type="fixed">
        <origin xyz="0 0 0.023" rpy="0 0 0" />
        <parent link="${name}_gripper_left_link"/>
        <child link="${name}_finger_left_link" />
        <dynamics friction="1" damping="1" />
        <axis xyz="1 0 0"/>
    </joint>

    <link name="${name}_finger_left_link">
        <inertial>
            <mass value="0.001" />
            <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0" 
                izz="1.0" />
        </inertial>

        <visual>
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://iai_donbot_sandbox_description/meshes/iai_wsg_50/WSG-FMF.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="black">
            <color rgba="0 0 0 1"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://iai_donbot_sandbox_description/meshes/iai_wsg_50/WSG-FMF.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <contact_coefficients kd="1.0" kp="1000.0" mu="0"/>
    </link>

    <!-- GRIPPER RIGHT -->

    <joint name="${name}_base_gripper_right_joint" type="prismatic">
        <limit lower="0" upper="0.051" effort="10.0" velocity="0.42"/>
        <origin xyz="0.0040 0 0" rpy="0 0 ${pi}" />
        <parent link="${name}_base_link"/>
        <child link="${name}_gripper_right_link" />
        <axis xyz="-1 0 0"/>
        <dynamics friction="1" damping="1" />
    </joint>
        
    <link name="${name}_gripper_right_link">
        <inertial>
            <mass value="0.001" />
            <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0" 
                izz="1.0" />
        </inertial>

        <visual>
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://iai_donbot_sandbox_description/meshes/iai_wsg_50/GUIDE_WSG50_110.stl" scale="0.001 0.001 0.001"/>
            <!--box size="0.0175 0.03 0.024"/-->
            </geometry>
            <material name="black">
            <color rgba="0 0 0 1"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
            <!--box size="0.0175 0.03 0.024"/-->
                <mesh filename="package://iai_donbot_sandbox_description/meshes/iai_wsg_50/GUIDE_WSG50_110.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT FINGER -->

    <joint name="${name}_guide_joint_finger_right" type="fixed">
        <origin xyz="0 0 0.023" rpy="0 0 0" />
        <parent link="${name}_gripper_right_link"/>
        <child link="${name}_finger_right_link" />
    </joint>

    <link name="${name}_finger_right_link">
        <inertial>
            <mass value="0.001" />
            <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0" 
                izz="1.0" />
        </inertial>

        <visual>
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://iai_donbot_sandbox_description/meshes/iai_wsg_50/WSG-FMF.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="black">
            <color rgba="0 0 0 1"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://iai_donbot_sandbox_description/meshes/iai_wsg_50/WSG-FMF.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <contact_coefficients kd="1.0" kp="1000.0" mu="0"/>
    </link>

    <link name="${name}_tool_frame"/>

    <joint name="${name}_tool_frame_joint" type="fixed">
        <origin xyz="0 0 0.144" rpy="0 0 0" />
        <parent link="${name}_base_link"/>
        <child link="${name}_tool_frame" />
    </joint>

    </xacro:macro>

</robot>

